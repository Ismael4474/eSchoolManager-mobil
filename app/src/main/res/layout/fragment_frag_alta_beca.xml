<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modelo.beca.FragAltaBeca">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-23dp">


        <TextView
            android:id="@+id/titolAltaDepart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/alfa_slab_one"
            android:shadowColor="#151313"
            android:text="Alta Nova Beca"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:text="Adjudicant:"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titolAltaDepart" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="96dp"
            android:layout_height="25dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:text="Import Inicial:"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text1" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="28dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="60dp"
            android:text="â‚¬"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/editTexAltaBecatImport"
            app:layout_constraintTop_toBottomOf="@+id/titolAltaDepart" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="84dp"
            android:layout_height="26dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="12dp"
            android:text="Estudiant: "
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text2" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="86dp"
            android:layout_height="24dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="12dp"
            android:text="Servei: "
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text4" />

        <EditText
            android:id="@+id/editTexAltaBecaNom"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:background="#E8E0E0"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/text1"
            app:layout_constraintTop_toBottomOf="@+id/titolAltaDepart" />

        <EditText
            android:id="@+id/editTexAltaBecatImport"
            android:layout_width="73dp"
            android:layout_height="27dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#E8E0E0"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/text2"
            app:layout_constraintTop_toBottomOf="@+id/editTexAltaBecaNom" />

        <Spinner
            android:id="@+id/spinnerAltaBecaEstudiant"
            android:layout_width="172dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:background="#E8E0E0"
            android:dropDownSelector="@color/white"
            android:scrollbarThumbHorizontal="@color/black"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/text4"
            app:layout_constraintTop_toBottomOf="@+id/editTexAltaBecatImport" />

        <Spinner
            android:id="@+id/spinnerAltaBecaServei"
            android:layout_width="172dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:background="#E8E0E0"
            android:dropDownSelector="@color/white"
            android:scrollbarThumbHorizontal="@color/black"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/text5"
            app:layout_constraintTop_toBottomOf="@+id/spinnerAltaBecaEstudiant" />

        <Button
            android:id="@+id/buttonAltaBecaAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:text="Aceptar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerAltaBecaServei" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>