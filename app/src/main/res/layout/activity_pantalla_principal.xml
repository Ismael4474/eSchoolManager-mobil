<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modelo.PantallaPrincipal"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"></androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="411dp"
        android:layout_height="181dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/logo_school" />

    <Button
        android:id="@+id/buttonEscola"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_baseline_add_home_24"
        android:drawableTint="@color/white"
        android:onClick="accesEscola"
        android:text="Escola"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/buttonDepartament"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_baseline_remember_me_24"
        android:drawableTint="@color/white"
        android:onClick="accesMenuDepartament"
        android:text="Departament"
        app:layout_constraintTop_toBottomOf="@+id/buttonEscola"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonEmpleat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_baseline_reduce_capacity_24"
        android:drawableTint="@color/white"
        android:onClick="accesMenuEmpleats"
        android:text="Empleat"
        app:layout_constraintTop_toBottomOf="@+id/buttonDepartament"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonEstudiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_baseline_school_24"
        android:drawableTint="@color/white"
        android:onClick="accesEstudiant"
        android:text="Estudiant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEmpleat" />

    <Button
        android:id="@+id/buttonBeca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_baseline_request_quote_24"
        android:drawableTint="@color/white"
        android:onClick="accesBeca"
        android:text="Beca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEstudiant" />

    <Button
        android:id="@+id/buttonServei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_baseline_home_repair_service_24"
        android:drawableTint="@color/white"
        android:text="Servei"
        android:onClick="accesMenuServeis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBeca" />

    <Button
        android:id="@+id/buttonSessio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_baseline_app_settings_alt_24"
        android:drawableTint="@color/white"
        android:onClick="accesSessio"
        android:text="Sessions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonServei"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonInforme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_baseline_app_settings_alt_24"
        android:drawableTint="@color/white"
        android:text="Informes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSessio"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>